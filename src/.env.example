# Explain My Repo - Environment Variables
# Copy this file to .env and fill in your values

# GitHub API Configuration
GITHUB_TOKEN=
GITHUB_API_URL=https://api.github.com

# Server Configuration
PORT=5000
NODE_ENV=development
HOST=localhost

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000/api
NEXT_PUBLIC_APP_NAME=Explain My Repo
NEXT_PUBLIC_APP_VERSION=2.0.0

# AI Model Configuration
DEFAULT_MODEL=codellama-7b
MODELS_DIR=../models
MAX_MODEL_CACHE_SIZE=50000000000

# Analysis Configuration
MAX_CONCURRENT_ANALYSES=3
ANALYSIS_TIMEOUT=300000
MAX_FILE_SIZE=10485760
MAX_TOTAL_SIZE=104857600

# Cache Configuration
ENABLE_CACHE=true
CACHE_DURATION=3600000
CACHE_DIR=.cache

# Security Configuration
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ENABLE_DEBUG=false

# Database Configuration (Future)
# DATABASE_URL=postgresql://user:password@localhost:5432/explainmyrepo
# DATABASE_POOL_SIZE=10

# Redis Configuration (Future)
# REDIS_URL=redis://localhost:6379
# REDIS_TTL=3600

# Email Configuration (Future)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_password

# OAuth Configuration (Future)
# GITHUB_OAUTH_CLIENT_ID=your_client_id
# GITHUB_OAUTH_CLIENT_SECRET=your_client_secret
# GITHUB_OAUTH_CALLBACK_URL=http://localhost:3000/auth/callback

# Analytics (Future)
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
# ENABLE_ANALYTICS=false

# Feature Flags
ENABLE_AI_INSIGHTS=true
ENABLE_SECURITY_SCAN=true
ENABLE_DEPENDENCY_SCAN=true
ENABLE_CODE_COMPLEXITY=true
ENABLE_HISTORY=true
ENABLE_EXPORT=true

# Performance
ENABLE_COMPRESSION=true
ENABLE_HTTP2=false
COMPRESSION_LEVEL=6

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Session Configuration (Future)
# SESSION_SECRET=your_session_secret_here
# SESSION_MAX_AGE=86400000

# AWS Configuration (Future)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET=explainmyrepo-storage

# Monitoring (Future)
# SENTRY_DSN=your_sentry_dsn
# ENABLE_MONITORING=false
